@{
    Layout = null;
}

@{
    if (IsPost)
    {
        string login = Request.Form["flogin_email"];
        string password = Request.Form["flogin_password"];

        var sc = new PROJECTO.WEB.BackEnd.ServerClass();
        string result = sc.Login(login, password);
        if (result != null)
        {
            Session["logged_user"] = login;
            Response.BufferOutput = true;
            Response.Redirect("profile.cshtml");
            //Server.Transfer("~/FrontEnd/profile.cshtml", true);
            /*<text>
                Your ID: @result<br />
                Company Name: @login <br />
                Contact Name: @password <br />
            </text>*/
        }
    }
}

