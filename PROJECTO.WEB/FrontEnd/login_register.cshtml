    <section id="login_register" class="login_register">
        <div class="login_register_wrapper">
            <div class="form_login">
                <form method="post">
                    <h2>Log In</h2>
                    <div class="spacer"></div>
                    <input type="text" name="flogin_email" placeholder="Email">
                    <input type="password" name="flogin_password" placeholder="Password">
                    <a href="forgot_something.html">Forgot something?</a>
                    <input type="submit" name="flogin" value="Log In">
                </form>
            </div>

            <div class="form_register">
                <form method="post">
                    <h2>Register</h2>
                    <div class="spacer"></div>
                    <input type="text" name="fregister_name" placeholder="Name*">
                    <input type="text" name="fregister_surname" placeholder="Surname*">
                    <input type="email" name="fregister_email" placeholder="Email Address*">
                    <input type="password" name="fregister_password" placeholder="Enter Password*">
                    <input type="password" name="fregister_password_confirm" placeholder="Confirm Password*">
                    <div style="width: 25px; margin: 10px 0; position: relative;">
                        <input type="checkbox" id="register_accept" name="fregister_accept" style="display: none;">
                        <label for="register_accept"></label>
                    </div>
                    <p style="font-size: 1.3em; display: inline-block; margin-left: 35px;">I agree to the Terms of Use.</p>
                    <p style="float: right;">* Required</p>
                    <input type="submit" name="fregister" value="Get Started!">
                </form>
            </div>
        </div>
    </section>

